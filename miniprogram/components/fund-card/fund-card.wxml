<!-- components/fund-card/fund-card.wxml -->
<view class="fund-card {{fund.apply_status.indexOf('暂停') > -1 ? 'paused' : ''}}" bindtap="onCardTap">
  <!-- 基金头部 -->
  <view class="fund-header">
    <view class="fund-info">
      <view class="fund-name">{{fund.fund_name}}</view>
      <view class="fund-code" catchtap="onCopyCode">
        {{fund.fund_id}}
        <text class="separator">·</text>
        <text class="exchange">{{exchange}}</text>
        <text class="separator">·</text>
        <text class="fund-type">{{fund.fund_type}}</text>
        <text class="separator">·</text>
        <text class="hold-days">{{holdDays}}</text>
      </view>
    </view>
    <view class="difficulty-badge">{{stars}}</view>
  </view>

  <!-- 基金详情 -->
  <view class="fund-details">
    <view class="detail-item">
      <view class="detail-label">价格</view>
      <view class="detail-value">{{priceText}}</view>
      <view class="detail-sub {{fund.change_pct > 0 ? 'positive' : (fund.change_pct < 0 ? 'negative' : '')}}">
        {{changeText}}
      </view>
    </view>
    <view class="detail-item">
      <view class="detail-label">净值</view>
      <view class="detail-value">{{netValueText}}</view>
    </view>
    <view class="detail-item">
      <view class="detail-label">溢价率</view>
      <view class="detail-value premium">{{premiumText}}</view>
    </view>
  </view>

  <!-- 基金底部 -->
  <view class="fund-footer">
    <view class="status-badge {{fund.apply_status.indexOf('暂停') > -1 ? 'badge-paused' : ''}}">
      {{fund.apply_status.indexOf('暂停') > -1 ? '⏸ ' : ''}}{{fund.apply_status}}
    </view>
    <view class="volume-text">成交额 {{volumeText}}</view>
  </view>
</view>
