<!-- pages/detail/detail.wxml -->
<view class="page">
  <!-- 基金基本信息 -->
  <view class="fund-header gradient-primary">
    <view class="fund-name">{{fundName}}</view>
    <view class="fund-code" bindtap="onCopyCode">
      {{fundId}}
      <text class="copy-hint">（点击复制）</text>
    </view>
  </view>

  <!-- 历史趋势 -->
  <view class="chart-section">
    <view class="section-title">30天溢价率走势</view>
    
    <view wx:if="{{loading}}" class="chart-loading">
      <text>加载中...</text>
    </view>
    
    <view wx:elif="{{!loading && historyData.length === 0}}" class="chart-empty">
      <text>暂无历史数据</text>
    </view>
    
    <view wx:else class="history-list">
      <view class="history-item" wx:for="{{historyData}}" wx:key="date">
        <text class="history-date">{{item.date}}</text>
        <text class="history-value {{item.premium_rate >= 0 ? 'positive' : 'negative'}}">
          {{item.premium_rate >= 0 ? '+' : ''}}{{item.premium_rate}}%
        </text>
      </view>
    </view>
  </view>

  <!-- 数据说明 -->
  <view class="info-section">
    <view class="section-title">数据说明</view>
    <view class="info-item">
      <text class="info-label">数据来源：</text>
      <text class="info-value">集思录</text>
    </view>
    <view class="info-item">
      <text class="info-label">更新频率：</text>
      <text class="info-value">每日 14:55</text>
    </view>
    <view class="info-item">
      <text class="info-label">历史天数：</text>
      <text class="info-value">最近 30 天</text>
    </view>
  </view>

  <!-- 跳转天天基金 -->
  <view class="action-section">
    <button class="action-btn gradient-primary" bindtap="onViewDetail">
      查看天天基金详情
    </button>
  </view>
</view>
