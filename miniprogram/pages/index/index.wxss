/* pages/index/index.wxss */
.page {
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 头部样式 */
.header {
  color: white;
  padding: 30rpx 30rpx 40rpx;
  text-align: center;
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 6rpx 30rpx rgba(102, 126, 234, 0.3);
}

.header-title {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.update-time {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 内容区域 */
.container {
  max-width: 750rpx;
  margin: -20rpx auto 0;
  padding: 0 20rpx;
}

/* 基金列表 */
.fund-list {
  padding-top: 8rpx;
}

/* 刷新按钮 - 固定在屏幕右下角 */
.refresh-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  color: white;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.5);
  z-index: 9999;
  transition: all 0.3s;
}

.refresh-btn:active {
  transform: scale(0.9) rotate(180deg);
}

.refresh-icon {
  display: block;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}
