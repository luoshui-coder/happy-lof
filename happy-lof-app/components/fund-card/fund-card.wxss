/* components/fund-card/fund-card.wxss */
.fund-card {
  background: white;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.fund-card.paused {
  opacity: 0.6;
  filter: grayscale(0.6);
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  position: relative;
}

.fund-card.paused::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.4);
  pointer-events: none;
  z-index: 1;
}

/* 基金头部 */
.fund-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 2;
}

.fund-info {
  flex: 1;
}

.fund-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
  line-height: 1.3;
}

.fund-code {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

.separator {
  color: #ddd;
  margin: 0 6rpx;
}

.exchange {
  color: #bbb;
  font-size: 0.9em;
}

.fund-type {
  color: #ccc;
  font-size: 0.95em;
}

.hold-days {
  color: #bbb;
  font-size: 0.85em;
}

.difficulty-badge {
  color: #ffa500;
  font-size: 28rpx;
  white-space: nowrap;
  margin-left: 12rpx;
}

/* 基金详情 */
.fund-details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  z-index: 2;
}

.detail-item {
  flex: 1;
  text-align: center;
}

.detail-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 2rpx;
}

.detail-value.premium {
  color: #ff6b9d;
}

.detail-sub {
  font-size: 22rpx;
  color: #666;
}

.detail-sub.positive {
  color: #f56565;
}

.detail-sub.negative {
  color: #48bb78;
}

/* 基金底部 */
.fund-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 2;
}

.status-badge {
  background: #48bb78;
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.badge-paused {
  background: #9e9e9e;
  box-shadow: 0 2rpx 8rpx rgba(158, 158, 158, 0.3);
}

.badge-warning {
  background: #ff9800; /* Orange */
  box-shadow: 0 2rpx 8rpx rgba(255, 152, 0, 0.3);
}

.volume-text {
  font-size: 22rpx;
  color: #666;
}
