/* pages/detail/detail.wxss */
.page {
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 基金头部 */
.fund-header {
  color: white;
  padding: 60rpx 40rpx;
  text-align: center;
}

.fund-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.fund-code {
  font-size: 32rpx;
  opacity: 0.9;
}

.copy-hint {
  font-size: 24rpx;
  opacity: 0.7;
  margin-left: 12rpx;
}

/* 图表区域 */
.chart-section {
  background: white;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.chart-loading,
.chart-empty {
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

/* 历史列表 */
.history-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-date {
  color: #666;
  font-size: 28rpx;
}

.history-value {
  font-size: 28rpx;
  font-weight: 600;
}

.history-value.positive {
  color: #f56565;
}

.history-value.negative {
  color: #48bb78;
}

/* 信息区域 */
.info-section {
  background: white;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 操作区域 */
.action-section {
  padding: 24rpx;
}

.action-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.action-btn::after {
  border: none;
}
